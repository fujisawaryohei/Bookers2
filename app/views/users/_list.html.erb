<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th><%= I18n.t("activerecord.attributes.user.name") %></th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40) %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to "詳細ページ", user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>