<div class="user-list">
  <h2><%= User.t %> <%= I18n.t("views.role.index") %></h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th><%= User.t(:name) %></th>
        <th><%= I18n.t("views.role.show") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= render 'layouts/icon', resource: user, attribute: :profile_image, width: 40, height: 40 %></td>
          <td><%= user.name %></td>
          <td>
            <%= link_to I18n.t("views.role.show"), user_path(user) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>