<h2>User info</h2>
<%= attachment_image_tag(user, :profile_image, :fill, 300, 300) %>
<table class="table">
  <tbody>
  <tr></tr>
  <tr>
    <th><%= I18n.t('activerecord.attributes.user.name') %></th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th><%= I18n.t('activerecord.attributes.user.introduction') %></th>
    <th><%= user.introduction %></th>
  </tr>
  </tbody>
</table>
  <div class="row">
    <% if signed_in_user?(user) %>
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>