<div class="book-list">
  <h2><%= I18n.t("activerecord.models.book") %><%= I18n.t("views.role.index") %></h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th><%= I18n.t("activerecord.attributes.book.title") %></th>
        <th><%= I18n.t("activerecord.attributes.book.body") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= render 'layouts/icon', resource: book.user, attribute: :profile_image, width: 50, height: 50 %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>