<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <div class="book-edit">
    <h1><%= I18n.t("views.edit", model: Book.t) %></h1>
    <%= form_with model: @book do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <%= f.submit I18n.t("views.role.update", model: Book.t) , class: "btn btn-success edit-btn" %>
    <% end %>
    <%= link_to I18n.t("views.role.show"), book_path(@book) %> |
    <%= link_to I18n.t("views.role.back"), books_path %>
  </div>
</div>