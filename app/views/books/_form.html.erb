<div class="books-form">
  <h2 class="mt-3"><%= I18n.t("views.new", model: Book.t.downcase) %></h2>
  <%= render 'layouts/validation_error_message', resource: book %>
  <%= form_with model: book do |f| %>
    <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <%= f.submit I18n.t("views.role.create", model: Book.t), class: "btn btn-success" %>
  <% end %>
</div>