<div class="col-md-3">
  <%= render 'users/profile', user: @book.user %>
  <%= render 'form', book: @new_book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2><%= I18n.t("views.show", model: Book.t) %></h2>
  <div class="book-detail">
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= render 'layouts/icon', resource: @book.user, attribute: :profile_image, width: 50, height: 50 %>
              <br />
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td><%= @book.body %></td>
          <% if signed_in_user?(@book.user) %>
            <td>
              <%= link_to I18n.t("views.role.edit"), edit_book_path(@book), class: "btn btn-sm btn-success"%>
            </td>
            <td>
              <%= link_to I18n.t("views.role.delete"), book_path(@book), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: I18n.t("views.alert.sure") } %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>